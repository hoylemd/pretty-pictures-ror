<h1 class="header-title id-signup">Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class='form-field form-field-username'>
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>
  </div>

  <div class='form-field form-field-password'>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class='form-field form-field-password-confirmation'>
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class='form-field form-field-bio'>
    <%= f.label :bio, "Biography" %>
    <%= f.text_field :bio, class: 'form-control' %>
  </div>

  <div class='form-btn form-btn-create-account'>
    <%= f.submit "Create my account", class: "btn btn-primary" %>
  </div>
<% end %>

<p>
Already have an account?
<%= link_to 'Log in', login_path, class: 'btn, btn-login-signup' %>
</p>
