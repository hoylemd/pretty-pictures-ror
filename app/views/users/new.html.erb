<h1>Sign up</h1>
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.label :bio, "Biography" %>
    <%= f.text_field :bio %>
  </div>

  <div>
    <%= f.submit "Create my account", class: "button button-primary" %>
  </div>
<% end %>

<p>
Already have an account?
<%= link_to 'Log in', login_path, class:"button, button-login-signup" %>
</p>
