<!DOCTYPE html>
<html>
<head>
  <title>PrettyPictures</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <h2><%= link_to 'Pretty Pictures', home_path, class: "logo" %></h2>
  <h3>The top 100 Pictures on 500px</h3>

  <% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
  <% end %>

  <% if current_user.nil? %>
    <%= link_to 'Sign Up', signup_path, class: "btn btn-session-action" %>
    <%= link_to 'Log in', login_path, class: "btn btn-session-action" %>
  <% else %>
    Welcome, <%= current_user.username %>
    <%= link_to 'Log Out', logout_path, class: "btn btn-session-action" %>
  <% end %>
</header>

<%= yield %>

<%= debug(params) if Rails.env.development? %>

</body>
</html>
